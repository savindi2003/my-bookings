<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/card_background"
    android:elevation="4dp"
    android:orientation="vertical"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvPaidStatus"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-21dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="TextView"
            android:textSize="12sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/ivHotelImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/hotel1" />
        </androidx.cardview.widget.CardView>


        <!-- Hotel Name -->

        <!-- Location -->

        <!-- Payment Status -->
        <TextView
            android:id="@+id/tvHotelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/cardView"
            android:fontFamily="@font/quicksand_bold"
            android:text="Hotel Name"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHotelLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHotelName"
            android:layout_marginStart="12dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/cardView"
            android:fontFamily="@font/quicksand_regular"
            android:text="City, Country"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPaidStatus"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHotelLocation"
            android:layout_marginStart="12dp"
            android:layout_marginTop="21dp"
            android:layout_toEndOf="@id/cardView"
            android:background="@drawable/bg_paid_status"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:padding="4dp"
            android:text="Pending"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp" />
    </RelativeLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btnCancelBooking"
            style="@style/OutlinedButton"
            android:fontFamily="@font/quicksand_bold"
            android:text="Rate this" />

        <Button
            android:id="@+id/btnViewTicket"
            style="@style/FilledButton"
            android:fontFamily="@font/quicksand_bold"
            android:text="Give Feedback" />
    </LinearLayout>
</LinearLayout>
