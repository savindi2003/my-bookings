<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".BlankFragment2">

    <!-- Profile Icon & More Options -->

    <!-- Profile Picture -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"
            android:text="Profile"
            android:textColor="@color/color1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView68"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:text="Log out" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/hotel1"
                android:scaleType="centerCrop"
                android:src="@drawable/colombo" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/ivEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/edit_img"
                android:src="@drawable/edit_img" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <!-- User Name -->
    <Button
        android:id="@+id/button31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/bottom_navigation"
        android:fontFamily="@font/quicksand_bold"
        android:text="Upload Image"
        android:textColor="@color/color1"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Daniel Austin"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- User Email -->
    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/quicksand_regular"
        android:text="daniel_austin@yourdomain.com"
        android:textColor="#777777"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView63"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/quicksand_regular"
        android:gravity="center"
        android:text="TextView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Edit Profile"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <LinearLayout
            android:id="@+id/linearLayout15"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textView64"
            tools:layout_editor_absoluteX="1dp">

            <TextView
                android:id="@+id/textView66"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_regular"
                android:text="First Name" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_last_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="3dp"
                android:background="@drawable/search_border_rounded"
                android:backgroundTint="#F0F0F0"
                android:padding="10dp">

                <EditText
                    android:id="@+id/editTextText_name11"
                    android:layout_width="320dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="2dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/quicksand_bold"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout17"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout15"
            tools:layout_editor_absoluteX="1dp">

            <TextView
                android:id="@+id/textView67"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_regular"
                android:text="Last Name" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="3dp"
                android:background="@drawable/search_border_rounded"
                android:backgroundTint="#F0F0F0"
                android:padding="10dp">

                <EditText
                    android:id="@+id/editTextText_name1"
                    android:layout_width="320dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="2dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/quicksand_bold"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout18"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout17"
            tools:layout_editor_absoluteX="1dp">

            <TextView
                android:id="@+id/textView65"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_regular"
                android:text="Phone Number" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/hotel_name_r"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="3dp"
                android:background="@drawable/search_border_rounded"
                android:backgroundTint="#F0F0F0"
                android:padding="10dp">

                <EditText
                    android:id="@+id/editTextText_name"
                    android:layout_width="320dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="2dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/quicksand_bold"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout18"
            tools:layout_editor_absoluteX="0dp">

            <Button
                android:id="@+id/button16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/bottom_navigation"
                android:fontFamily="@font/quicksand_bold"
                android:text="Change Password"
                android:textColor="@color/color1" />

            <Button
                android:id="@+id/button17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/color1"
                android:fontFamily="@font/quicksand_bold"
                android:text="Update" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
