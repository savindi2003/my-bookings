<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedImageStyle" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="BookingTabButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/tab_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilledButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:strokeWidth">2</item>
        <item name="android:strokeColor">@color/green</item>
    </style>

    <style name="Label">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#888888</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="Value">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="CustomSpinnerStyle">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">14sp</item><!-- Replace with your font -->
    </style>







</resources>